<h1>All Pets</h1>



<div class="row">
  <% @pets.each do |pet| %>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
  
          <h5 class="card-title"><%= pet.name %></h5>
          <a href="/pets/<%= pet.id %>" class="btn btn-primary">More info...</a>
        </div>
      </div>
    </div>
  <% end %>
</div>




<%= link_to "New pet", new_pet_path %>

